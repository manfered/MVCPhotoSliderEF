@model IEnumerable<MVCPhotoSliderEF.Models.Slide>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo.SRC)
        </th>
        <th>
            Photo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo.SRC)
            </td>
            <td>

                @if (item.Photo != null)
                {
                    <span class="linkDisabled">Create</span> @: | 
                    @Html.ActionLink("Edit", "Edit", "Photos", new { id = item.SlideID } , null) @: |
                    @Html.ActionLink("Delete", "Delete", "Photos", new { id = item.SlideID }, null)
                }
                else
                {
                    @Html.ActionLink("Create", "Create", "Photos", new { id = item.SlideID }, null) @: |
                    <span class="linkDisabled">Edit</span> @: | 
                    <span class="linkDisabled">Delete</span>
                }


            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SlideID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SlideID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SlideID })
            </td>
        </tr>
    }

</table>
